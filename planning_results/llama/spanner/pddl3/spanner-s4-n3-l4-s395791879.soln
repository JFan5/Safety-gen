#:action walk 
#:parameters (?start - location?end - location?m - man)
#:precondition (and (at?m?start) 
                     (link?start?end))
#:effect (and (not (at?m?start)) (at?m?end)))

#:action pickup_spanner 
#:parameters (?l - location?s - spanner?m - man)
#:precondition (and (at?m?l) 
                       (at?s?l))
#:effect (and (not (at?s?l))
                 (carrying?m?s)))

#:action tighten_nut 
#:parameters (?l - location?s - spanner?m - man?n - nut)
#:precondition (and (at?m?l) 
		      	   (at?n?l)
			   (carrying?m?s)
			   (useable?s)
			   (loose?n))
#:effect (and (not (loose?n))(not (useable?s)) (tightened?n)))

(at bob location1)
(carrying spanner1)
(at spanner1 location1)
(useable spanner1)
(at bob shed)
(at nut1 gate)
(loose nut1)
(at nut1 gate)
(loose nut2)
(at nut2 gate)
(loose nut3)
(at nut3 gate)
(link shed location1)
(link location4 gate)
(link location1 location2)
(link location2 location3)
(link location3 location4)
(at spanner1 location4)
(useable spanner1)
(at spanner3 location3)
(useable spanner3)
(tightened nut1)
(tightened nut2)
(tightened nut3)
(not (at shed))
 
walk 
  (pickup_spanner 
   location1 
   spanner1 
   bob) 
  (pickup_spanner 
   location1 
   spanner2 
   bob) 
  (pickup_spanner 
   location4 
   spanner3 
   bob) 
  (tighten_nut 
   location1 
   spanner1 
   bob 
   nut1) 
  (tighten_nut 
   location1 
   spanner1 
   bob 
   nut2) 
  (tighten_nut 
   location1 
   spanner1 
   bob 
   nut3) 
  (tighten_nut 
   location4 
   spanner3 
   bob 
   nut1) 
  (tighten_nut 
   location4 
   spanner3 
   bob 
