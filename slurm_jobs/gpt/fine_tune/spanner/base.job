conda activate llmstl

# Model and output configuration for GPT-OSS-20B on spanner scenario
MODEL_NAME="unsloth/gpt-oss-20b-unsloth-bnb-4bit"
OUTPUT_NAME="gpt_oss_20b/spanner/base"
DATASET_PATH="data/sft/spanner_pddl2.hf"

python3 pddl_finetune.py \
  --mode train \
  --model "$MODEL_NAME" \
  --output "$OUTPUT_NAME" \
  --dataset "$DATASET_PATH" \
  --scenarios spanner



