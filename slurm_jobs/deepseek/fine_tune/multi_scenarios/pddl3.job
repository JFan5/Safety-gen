#!/bin/bash

#SBATCH --mail-user=jfan5@nd.edu
#SBATCH --mail-type=BEGIN,END,FAIL
#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --cpus-per-task=28
#SBATCH --job-name=fine_tune_deepseek_pddl3
#SBATCH --output=fine_tune_deepseek_pddl3.o

conda activate llmstl

# Fine-tune DeepSeek-R1 Distill LLaMA 8B on the PDDL3 multi-scenario dataset.
# Make sure the dataset has been generated via:
#   python3 script/collect_finetuned_dataset_together.py --pddl PDDL3 --output /home/ubuntu/data/sft/multi_scenarios/pddl3.hf

MODEL_NAME="unsloth/DeepSeek-R1-Distill-Llama-8B"
DATASET_PATH="/home/ubuntu/data/sft/multi_scenarios/pddl3.hf"
OUTPUT_NOTE="deepseek_multi_pddl3"

if [ ! -d "${DATASET_PATH}" ]; then
  echo "Dataset not found at ${DATASET_PATH}"
  echo "Please generate it before submitting this job."
  exit 1
fi

python3 pddl_finetune.py \
  --mode train \
  --model "${MODEL_NAME}" \
  --output "${OUTPUT_NOTE}" \
  --dataset "${DATASET_PATH}" \
  --family llama \
  --max-seq-length 4096 \
  --per-device-train-batch-size 4 \
  --gradient-accumulation-steps 2 \
  --scenarios all
