conda activate llmstl

# Model and output configuration for GPT-OSS-20B on delivery scenario (PDDL2)
MODEL_NAME="unsloth/gpt-oss-20b-unsloth-bnb-4bit"
OUTPUT_NAME="gpt_oss_20b/delivery/pddl2"
DATASET_PATH="data/sft/delivery/pddl2.hf"

python3 pddl_finetune.py \
  --mode train \
  --model "$MODEL_NAME" \
  --output "$OUTPUT_NAME" \
  --dataset "$DATASET_PATH" \
  --family gpt \
  --max-seq-length 2048 \
  --per-device-train-batch-size 4 \
  --gradient-accumulation-steps 4 \
  --load-in-4bit \
  --scenarios delivery

