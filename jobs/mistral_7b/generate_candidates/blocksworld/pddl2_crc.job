python3 script/generate_score_candidate.py \
  --model "/groups/fkong/jfan5/sft_models/mistral_7b/blocksworld/pddl2" \
  --family mistral \
  --domain-file "blocksworld/domain.pddl" \
  --problems-dir "blocksworld/all_problems/training" \
  --prompt-template "prompt.txt" \
  --out "/groups/fkong/jfan5/data/dpo/mistral_7b/blocksworld/pddl2/scored.jsonl"

